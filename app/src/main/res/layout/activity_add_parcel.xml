<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="13"
        android:padding="12sp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >



            <TextView
                android:id="@+id/enter_details"
                android:layout_width="348dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_horizontal|center"
                android:text="Enter Parcel Details:"
                android:textAppearance="?android:attr/textAppearanceLarge"
                app:fontFamily="sans-serif"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp" />
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                app:srcCompat="@drawable/spmlogo" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/buttonDate"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="SELECT RECEIVED DATE" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/inDate" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/buttonTime"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="SELECT RECEIVED TIME" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/inTime" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/buttonSentDate"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="SELECT SENT DATE" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sentDate" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/buttonSentTime"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="SELECT SENT TIME" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sentTime" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/parcelTypeButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Select Parcel Type" />

            <TextView
                android:id="@+id/parcelTypeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select parcel type "
                android:textSize="3mm" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/parcelWeightButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Select Parcel Weight" />

            <TextView
                android:id="@+id/parcelWeightTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select parcel weight"
                android:textSize="3mm" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/buttonFragile"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Fragile: Yes/No" />

            <TextView
                android:id="@+id/textViewFragile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Is parcel fragile?"
                android:textSize="3mm" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/statusButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Select parcel status" />

            <TextView
                android:id="@+id/statusTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select parcel status"
                android:textSize="3mm" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/distributionLocationButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Select distribution location" />

            <TextView
                android:id="@+id/distributionLocationTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select distribution location"
                android:textSize="3mm" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal" >


            <TextView
                android:id="@+id/enterId"
                android:layout_width="193dp"
                android:layout_height="44dp"
                android:text="Enter parcel Id"
                android:textSize="3mm" />

            <EditText
                android:id="@+id/parcelId"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:maxLength="12"
                android:text="" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal" >


            <TextView
                android:id="@+id/enterFName"
                android:layout_width="189dp"
                android:layout_height="48dp"
                android:text="Enter First Name"
                android:textSize="3mm" />

            <EditText
                android:id="@+id/FirstName"
                android:layout_width="196dp"
                android:layout_height="wrap_content"
                android:maxLength="20"
                android:text="" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal" >


            <TextView
                android:id="@+id/enterLName"
                android:layout_width="193dp"
                android:layout_height="38dp"
                android:text="Enter Last Name"
                android:textSize="3mm" />

            <EditText
                android:id="@+id/LastName"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:maxLength="20"
                android:text="" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal" >


            <TextView
                android:id="@+id/addressTextView"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="Enter shipping address"
                android:textSize="3mm" />

            <EditText
                android:id="@+id/addressEditText"
                android:layout_width="183dp"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal" >


            <TextView
                android:id="@+id/phoneNumberTV"
                android:layout_width="193dp"
                android:layout_height="44dp"
                android:text="Enter phone number"
                android:textSize="3mm" />

            <EditText
                android:id="@+id/phoneNumberET"
                android:layout_width="194dp"
                android:layout_height="wrap_content"
                android:maxLength="10"
                android:text="" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal" >


            <TextView
                android:id="@+id/emailTV"
                android:layout_width="193dp"
                android:layout_height="44dp"
                android:text="Enter email address"
                android:textSize="3mm" />

            <EditText
                android:id="@+id/emailET"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal" >


            <TextView
                android:id="@+id/deliveryManNameTV"
                android:layout_width="193dp"
                android:layout_height="44dp"
                android:text="Enter delivery man name"
                android:textSize="3mm" />

            <EditText
                android:id="@+id/deliveryManNameET"
                android:layout_width="194dp"
                android:layout_height="wrap_content"
                android:maxLength="12"
                android:text="" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/addParcelButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Parcel"
                android:background="@color/colorPrimary"

                />


        </LinearLayout>

    </LinearLayout>
</ScrollView>
